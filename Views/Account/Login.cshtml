@model G_StockVente.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 80px); padding: var(--space-6) var(--space-4);">
    <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4">
        <!-- Logo / Brand Header -->
        <div class="text-center mb-6">
            <div style="width: 72px; height: 72px; margin: 0 auto var(--space-5); border-radius: var(--radius-xl); background: var(--color-primary); display: flex; align-items: center; justify-content: center; color: white; font-size: 32px; font-weight: 800; box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);">
                GSV
            </div>
            <h1 style="font-size: 32px; font-weight: 800; margin: 0 0 var(--space-2); color: var(--color-text);">G-StockVente</h1>
            <p class="text-muted" style="font-size: 15px; margin: 0;">Connectez-vous pour accéder à votre espace</p>
        </div>

        <!-- Login Card -->
        <div class="card" style="border: 1px solid var(--color-border); box-shadow: var(--shadow-lg);">
            <div class="card-body" style="padding: var(--space-8);">
                <form asp-action="Login" method="post" novalidate id="loginForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">Adresse email</label>
                        <input asp-for="Email" class="form-control form-control-lg" 
                               placeholder="nom@exemple.com" 
                               autocomplete="username" 
                               autofocus 
                               style="padding: var(--space-3) var(--space-4);" />
                        <span asp-validation-for="Email" class="form-error"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Password" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">Mot de passe</label>
                        <input asp-for="Password" class="form-control form-control-lg" 
                               placeholder="••••••••" 
                               autocomplete="current-password"
                               style="padding: var(--space-3) var(--space-4);" />
                        <span asp-validation-for="Password" class="form-error"></span>
                    </div>

                    <div class="mb-5">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label" style="font-size: 14px; cursor: pointer; margin-left: var(--space-2);">
                                Se souvenir de moi
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100" id="loginButton" style="padding: var(--space-3) var(--space-5); font-size: 16px; font-weight: 600;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: var(--space-2);"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path><polyline points="10 17 15 12 10 7"></polyline><line x1="15" y1="12" x2="3" y2="12"></line></svg>
                        Se connecter
                    </button>
                </form>
            </div>

            <div class="card-footer text-center" style="background: var(--color-bg); padding: var(--space-4); border-top: 1px solid var(--color-border);">
                <small class="text-muted" style="font-size: 13px;">
                    © 2025 G-StockVente · v1.0
                </small>
            </div>
        </div>

        <!-- Help Text -->
        <div class="text-center mt-5">
            <p class="text-muted" style="font-size: 14px; margin: 0;">
                Besoin d'aide ? <a href="#" style="color: var(--color-primary); text-decoration: none; font-weight: 500;">Contactez le support</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('loginForm')?.addEventListener('submit', function(e) {
            const button = document.getElementById('loginButton');
            if (button && !button.disabled) {
                LoadingState.show(button);
            }
        });
    </script>
}

