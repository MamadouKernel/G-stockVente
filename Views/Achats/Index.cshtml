@model IEnumerable<G_StockVente.Domain.Models.Achat>
@using G_StockVente.Domain.Models
@{
    ViewData["Title"] = "Achats";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = Model?.Count() ?? 0;
}

<div class="page-header">
    <div>
        <h1 class="page-title">Achats</h1>
        <p class="page-subtitle">Commandes, r√©ception et suivi des statuts</p>
    </div>
    <div class="page-actions">
        <a asp-action="Create" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
            Nouvel achat
        </a>
    </div>
</div>

<!-- KPIs -->
<div class="row g-4 mb-6">
    <div class="col-12 col-sm-6 col-md-4">
        <div class="kpi kpi--primary">
            <div class="kpi__label">Total achats</div>
            <div class="kpi__value">@total</div>
            <div class="kpi__footer">Commandes enregistr√©es</div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12 col-md-6 col-lg-5">
                <label class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><line x1="3" y1="6" x2="21" y2="6"></line><path d="M7 12h10M7 18h10M7 6v12"></path></svg>
                    Statut
                </label>
                <select name="statut" 
                        class="form-select" 
                        style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                        aria-label="Filtrer par statut">
                    <option value="">üìã Tous les statuts</option>
                    @foreach (var s in ViewBag.Statuts as IEnumerable<StatutAchat> ?? Array.Empty<StatutAchat>())
                    {
                        <option value="@((int)s)" selected="@(ViewBag.Statut?.ToString() == s.ToString())">@s</option>
                    }
                </select>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <button type="submit" class="btn btn-primary w-100" style="height: 42px; font-weight: 600;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: var(--space-2);"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path></svg>
                    Appliquer les filtres
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Purchases List -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <div style="font-weight: 600;">Commandes</div>
            @if (Model != null && Model.Any())
            {
                <small class="text-muted">@Model.Count() achat(s)</small>
            }
        </div>
    </div>
    <div class="card-body" style="padding: 0;">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-state" style="margin: var(--space-8);">
                <div class="empty-state-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><line x1="20" y1="8" x2="20" y2="14"></line><line x1="23" y1="11" x2="17" y2="11"></line></svg>
                </div>
                <div class="empty-state-title">Aucun achat</div>
                <div class="empty-state-message">Aucun achat ne correspond aux crit√®res s√©lectionn√©s.</div>
                <div class="empty-state-action">
                    <a asp-action="Create" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                        Cr√©er un achat
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Num√©ro</th>
                            <th>Date</th>
                            <th>Boutique</th>
                            <th>Fournisseur</th>
                            <th class="text-end">Montant TTC</th>
                            <th style="width: 140px;">Statut</th>
                            <th style="width: 100px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var achat in Model)
                        {
                            <tr>
                                <td>
                                    <strong style="font-size: 14px; color: var(--color-primary);">@achat.NumeroAchat</strong>
                                </td>
                                <td>
                                    <div style="font-size: 13px; font-weight: 600;">@achat.DateCommande.ToString("dd/MM/yyyy")</div>
                                </td>
                                <td>
                                    <span class="badge badge-secondary">@achat.Boutique.Nom</span>
                                </td>
                                <td>
                                    <div style="font-size: 13px;">@achat.Fournisseur.Nom</div>
                                </td>
                                <td class="text-end">
                                    <strong style="font-size: 16px;">@achat.MontantTTC.ToString("N2", new System.Globalization.CultureInfo("fr-FR")) ‚Ç¨</strong>
                                </td>
                                <td>
                                    @switch (achat.Statut)
                                    {
                                        case StatutAchat.Receptionne:
                                            <span class="badge badge-success">
                                                <span class="status-indicator status-indicator--success"></span>
                                                R√©ceptionn√©
                                            </span>
                                            break;
                                        case StatutAchat.Annule:
                                            <span class="badge badge-danger">
                                                <span class="status-indicator status-indicator--danger"></span>
                                                Annul√©
                                            </span>
                                            break;
                                        case StatutAchat.EnReception:
                                            <span class="badge badge-warning">
                                                <span class="status-indicator status-indicator--warning"></span>
                                                En r√©ception
                                            </span>
                                            break;
                                        default:
                                            <span class="badge badge-secondary">@achat.Statut</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" title="Actions">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="1"></circle><circle cx="12" cy="5" r="1"></circle><circle cx="12" cy="19" r="1"></circle></svg>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@achat.Id" title="D√©tails">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                            </a></li>
                                            @if (achat.Statut != StatutAchat.Receptionne && achat.Statut != StatutAchat.Annule)
                                            {
                                                <li><a class="dropdown-item" asp-action="Reception" asp-route-id="@achat.Id" title="R√©ceptionner">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                                                </a></li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

