@{
    ViewData["Title"] = "Aide";
}

<div class="page-header">
    <div>
        <div class="d-flex align-items-center gap-3 mb-2">
            <div class="aide-icon-wrapper" style="width: 56px; height: 56px; border-radius: 16px; background: linear-gradient(135deg, #3481c0 0%, #2563eb 100%); display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(52, 129, 192, 0.3);">
