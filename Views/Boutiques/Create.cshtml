@model G_StockVente.Domain.Models.Boutique
@{
    ViewData["Title"] = "Nouvelle boutique";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Nouvelle boutique</h1>
        <p class="page-subtitle">Création et paramètres de base</p>
    </div>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"></path></svg>
            Retour
        </a>
    </div>
</div>

<div class="row form-page-container">
    <div class="col-12 col-lg-10">
        <div class="card">
            <div class="card-header">
                <div style="font-weight: 600;">Informations générales</div>
                <small class="text-muted">Détails de la boutique</small>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate id="createForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                    <div class="row g-4">
                        <div class="col-12">
                            <label asp-for="Nom" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                                Nom de la boutique <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nom" 
                                   class="form-control" 
                                   style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                   placeholder="Nom de la boutique"
                                   autofocus
                                   required />
                            <span asp-validation-for="Nom" class="form-error"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Adresse" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                                Adresse
                            </label>
                            <input asp-for="Adresse" 
                                   class="form-control" 
                                   style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                   placeholder="Adresse complète" />
                            <span asp-validation-for="Adresse" class="form-error"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Telephone" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                                Téléphone
                            </label>
                            <input asp-for="Telephone" 
                                   class="form-control" 
                                   type="tel"
                                   style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                   placeholder="+XX XX XX XX XX" />
                            <span asp-validation-for="Telephone" class="form-error"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                                Email
                            </label>
                            <input asp-for="Email" 
                                   class="form-control" 
                                   type="email"
                                   style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                   placeholder="contact@boutique.com"
                                   autocomplete="email" />
                            <span asp-validation-for="Email" class="form-error"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="TvaParDefaut" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
                                TVA par défaut (%)
                            </label>
                            <div class="input-group" style="height: 42px;">
                                <input asp-for="TvaParDefaut" 
                                       class="form-control" 
                                       type="number" 
                                       step="0.01"
                                       min="0"
                                       max="100"
                                       style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                       placeholder="0.00" />
                                <span class="input-group-text" style="background: var(--color-bg);">%</span>
                            </div>
                            <span asp-validation-for="TvaParDefaut" class="form-error"></span>
                        </div>

                        <div class="col-md-6 d-flex align-items-end">
                            <div class="form-check" style="padding-top: var(--space-3);">
                                <input asp-for="EstActive" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       checked 
 />
                                <label asp-for="EstActive" class="form-check-label" style="font-weight: 500; cursor: pointer; margin-left: var(--space-2);">
                                    Boutique active
                                </label>
                            </div>
                        </div>
                    </div>

                    <hr style="margin: var(--space-6) 0; border-color: var(--color-border);" />

                    <div class="d-flex gap-3 justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-primary" style="height: 42px; font-weight: 600; min-width: 120px;">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitButton" style="height: 42px; font-weight: 600; min-width: 120px;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: var(--space-2);"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            Créer la boutique
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('createForm')?.addEventListener('submit', function(e) {
            const button = document.getElementById('submitButton');
            if (button && !button.disabled) {
                LoadingState.show(button);
            }
        });
    </script>
}

