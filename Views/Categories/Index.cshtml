@model IEnumerable<G_StockVente.Domain.Models.Categorie>
@{
    ViewData["Title"] = "Catégories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h2 class="page-title" style="font-size:22px;">Catégories</h2>
        <p class="page-subtitle">Organisation du catalogue et sous-catégories.</p>
    </div>
    <div class="page-actions">
        @if (User.IsInRole("AdminReseau") || User.IsInRole("ManagerBoutique"))
        {
            <a asp-action="Create" class="btn btn-primary">Nouvelle catégorie</a>
        }
    </div>
</div>

<div class="row g-3">
    @foreach (var categorie in Model)
    {
        <div class="col-12 col-md-6 col-xl-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@categorie.Nom</h5>
                    @if (!string.IsNullOrEmpty(categorie.Description))
                    {
                        <p class="card-text text-muted">@categorie.Description</p>
                    }
                    @if (categorie.SousCategories != null && categorie.SousCategories.Any())
                    {
                        <p class="card-text"><small class="text-muted">Sous-catégories: @categorie.SousCategories.Count</small></p>
                    }
                    <p class="card-text"><small class="text-muted">Produits: @(categorie.Produits?.Count ?? 0)</small></p>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" title="Actions">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="1"></circle><circle cx="12" cy="5" r="1"></circle><circle cx="12" cy="19" r="1"></circle></svg>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@categorie.Id" title="Détails">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                            </a></li>
                            @if (User.IsInRole("AdminReseau") || User.IsInRole("ManagerBoutique"))
                            {
                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@categorie.Id" title="Modifier">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                </a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="empty-state">Aucune catégorie.</div>
}
