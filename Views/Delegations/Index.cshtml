@model IEnumerable<G_StockVente.Domain.Models.Delegation>
@using G_StockVente.Domain.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Délégations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Délégations temporaires</h1>
        <p class="page-subtitle">Gestion des délégations de droits entre utilisateurs</p>
    </div>
    <div class="page-actions">
        <a asp-action="Create" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
            Nouvelle délégation
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><polyline points="20 6 9 17 4 12"></polyline></svg>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Filtres -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label">Recherche</label>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Nom, email, rôle..." />
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label">Délégant</label>
                    <select name="delegantId" class="form-select" asp-items="ViewBag.Utilisateurs">
                        <option value="">Tous</option>
                    </select>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <label class="form-label">Bénéficiaire</label>
                    <select name="beneficiaireId" class="form-select" asp-items="ViewBag.Utilisateurs">
                        <option value="">Tous</option>
                    </select>
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    <label class="form-label">Statut</label>
                    <select name="estActive" class="form-select">
                        <option value="">Tous</option>
                        <option value="true" selected="@(ViewBag.EstActive == true)">Active</option>
                        <option value="false" selected="@(ViewBag.EstActive == false)">Inactive</option>
                    </select>
                </div>
                <div class="col-12 col-md-6 col-lg-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path></svg>
                        Filtrer
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Réinitialiser</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-state">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" style="opacity: 0.4;"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                <h3 class="empty-state__title">Aucune délégation</h3>
                <p class="empty-state__text">Créez votre première délégation temporaire de droits.</p>
                <a asp-action="Create" class="btn btn-primary">Créer une délégation</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Délégant</th>
                            <th>Bénéficiaire</th>
                            <th>Rôle délégué</th>
                            <th>Période</th>
                            <th>Statut</th>
                            <th>Raison</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var delegation in Model)
                        {
                            var now = DateTime.UtcNow;
                            var isExpired = delegation.DateFin < now;
                            var isActiveNow = delegation.EstActive && delegation.DateDebut <= now && delegation.DateFin >= now;
                            <tr>
                                <td>
                                    <div style="font-weight: 600;">@(delegation.UtilisateurDelegant?.Prenom ?? "") @(delegation.UtilisateurDelegant?.Nom ?? "")</div>
                                    <small class="text-muted">@(delegation.UtilisateurDelegant?.Email ?? "")</small>
                                </td>
                                <td>
                                    <div style="font-weight: 600;">@(delegation.UtilisateurBeneficiaire?.Prenom ?? "") @(delegation.UtilisateurBeneficiaire?.Nom ?? "")</div>
                                    <small class="text-muted">@(delegation.UtilisateurBeneficiaire?.Email ?? "")</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@delegation.RoleDelege</span>
                                </td>
                                <td>
                                    <small>
                                        <strong>Du:</strong> @delegation.DateDebut.ToString("dd/MM/yyyy")<br />
                                        <strong>Au:</strong> @delegation.DateFin.ToString("dd/MM/yyyy")
                                    </small>
                                </td>
                                <td>
                                    @if (isActiveNow)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else if (isExpired)
                                    {
                                        <span class="badge bg-secondary">Expirée</span>
                                    }
                                    else if (delegation.DateDebut > now)
                                    {
                                        <span class="badge bg-warning">À venir</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@(delegation.Raison ?? "—")</small>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@delegation.Id" class="btn btn-sm btn-outline-primary" title="Détails">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@delegation.Id" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                        </a>
                                        @if (delegation.EstActive && !isExpired)
                                        {
                                            <form asp-action="Desactiver" asp-route-id="@delegation.Id" method="post" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment désactiver cette délégation ?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Désactiver">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
                                                </button>
                                            </form>
                                        }
                                        else if (!delegation.EstActive && !isExpired)
                                        {
                                            <form asp-action="Activer" asp-route-id="@delegation.Id" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Activer">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="Delete" asp-route-id="@delegation.Id" method="post" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette délégation ?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

