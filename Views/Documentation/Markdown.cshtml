@{
    ViewData["Title"] = ViewBag.Title ?? "Documentation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="d-flex align-items-center gap-3">
        <div style="width: 56px; height: 56px; border-radius: 16px; background: linear-gradient(135deg, #3481c0 0%, #2563eb 100%); display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(52, 129, 192, 0.3);">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line></svg>
        </div>
        <div>
            <h1 class="page-title mb-1">@ViewBag.Title</h1>
            <p class="page-subtitle mb-0">@ViewBag.FileName</p>
        </div>
    </div>
    <div class="page-actions">
        <a asp-controller="Aide" asp-action="Index" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"></path></svg>
            Retour Ã  l'aide
        </a>
    </div>
</div>

<div class="card surface">
    <div class="card-body p-5">
        <div class="markdown-content" style="max-width: 900px; margin: 0 auto;">
            <pre style="white-space: pre-wrap; font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace; font-size: 14px; line-height: 1.6; color: #101828; background: transparent; border: none; padding: 0; margin: 0;">@Html.Raw(ViewBag.Content)</pre>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .markdown-content {
            font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace;
        }
        .markdown-content pre {
            white-space: pre-wrap;
            word-wrap: break-word;
            font-size: 14px;
            line-height: 1.8;
            color: #101828;
        }
        .markdown-content code {
            background: rgba(52, 129, 192, 0.08);
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 13px;
        }
    </style>
}

