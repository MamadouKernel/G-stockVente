@model G_StockVente.Domain.Models.Fournisseur
@{
    ViewData["Title"] = "Nouveau fournisseur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <div class="d-flex align-items-center gap-3 mb-2">
            <div style="width: 48px; height: 48px; border-radius: 12px; background: linear-gradient(135deg, #3481c0 0%, #2563eb 100%); display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(52, 129, 192, 0.3);">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
            </div>
            <div>
                <h1 class="page-title" style="font-size: 28px; font-weight: 800; margin: 0; line-height: 1.2;">Nouveau fournisseur</h1>
                <p class="page-subtitle" style="margin: 4px 0 0; color: #667085; font-size: 14px;">Création d'un nouveau fournisseur</p>
            </div>
        </div>
    </div>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="me-2"><path d="M19 12H5M12 19l-7-7 7-7"></path></svg>
            Retour
        </a>
    </div>
</div>

<div class="row form-page-container">
    <div class="col-12 col-lg-10">
        <div class="card surface" style="border-left: 4px solid #3481c0;">
            <div class="card-header" style="background: linear-gradient(135deg, rgba(52, 129, 192, 0.05) 0%, rgba(219, 180, 56, 0.03) 100%); border-bottom: 1px solid rgba(52, 129, 192, 0.15);">
                <div style="font-weight: 600; color: #3481c0; font-size: 16px;">Informations générales</div>
                <small class="text-muted" style="font-size: 13px;">Détails du fournisseur</small>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate id="createForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" style="border-left: 4px solid #ef4444; border-radius: 12px;"></div>

                    <div class="row g-4">
                        <div class="col-12">
                            <label asp-for="Nom" class="form-label" style="font-weight: 600; margin-bottom: 8px; color: #101828; font-size: 14px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px; color: #3481c0;"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle></svg>
                                Nom du fournisseur <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nom" 
                                   class="form-control" 
                                   style="height: 44px; padding: 12px 16px; font-size: 14px; border-radius: 10px; border: 1.5px solid rgba(16, 24, 40, 0.1); transition: all 0.2s ease;"
                                   placeholder="Nom du fournisseur"
                                   autofocus
                                   required />
                            <span asp-validation-for="Nom" class="form-error"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Adresse" class="form-label" style="font-weight: 600; margin-bottom: 8px; color: #101828; font-size: 14px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px; color: #3481c0;"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                                Adresse
                            </label>
                            <input asp-for="Adresse" 
                                   class="form-control" 
                                   style="height: 44px; padding: 12px 16px; font-size: 14px; border-radius: 10px; border: 1.5px solid rgba(16, 24, 40, 0.1); transition: all 0.2s ease;"
                                   placeholder="Adresse complète" />
                            <span asp-validation-for="Adresse" class="form-error"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Telephone" class="form-label" style="font-weight: 600; margin-bottom: 8px; color: #101828; font-size: 14px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px; color: #3481c0;"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                                Téléphone
                            </label>
                            <input asp-for="Telephone" 
                                   class="form-control" 
                                   type="tel"
                                   style="height: 44px; padding: 12px 16px; font-size: 14px; border-radius: 10px; border: 1.5px solid rgba(16, 24, 40, 0.1); transition: all 0.2s ease;"
                                   placeholder="+XX XX XX XX XX" />
                            <span asp-validation-for="Telephone" class="form-error"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label" style="font-weight: 600; margin-bottom: 8px; color: #101828; font-size: 14px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px; color: #3481c0;"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                                Email
                            </label>
                            <input asp-for="Email" 
                                   class="form-control" 
                                   type="email"
                                   style="height: 44px; padding: 12px 16px; font-size: 14px; border-radius: 10px; border: 1.5px solid rgba(16, 24, 40, 0.1); transition: all 0.2s ease;"
                                   placeholder="contact@fournisseur.com"
                                   autocomplete="email" />
                            <span asp-validation-for="Email" class="form-error"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Notes" class="form-label" style="font-weight: 600; margin-bottom: 8px; color: #101828; font-size: 14px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 6px; color: #3481c0;"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line></svg>
                                Notes
                            </label>
                            <textarea asp-for="Notes" 
                                      class="form-control" 
                                      rows="4"
                                      style="padding: 12px 16px; font-size: 14px; border-radius: 10px; border: 1.5px solid rgba(16, 24, 40, 0.1); transition: all 0.2s ease;"
                                      placeholder="Notes supplémentaires sur le fournisseur"></textarea>
                            <span asp-validation-for="Notes" class="form-error"></span>
                        </div>

                        <div class="col-12 d-flex align-items-end">
                            <div class="form-check" style="padding-top: 12px;">
                                <input asp-for="EstActif" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       checked 
 />
                                <label asp-for="EstActif" class="form-check-label" style="font-weight: 500; cursor: pointer; margin-left: 10px; color: #101828; font-size: 14px;">
                                    Fournisseur actif
                                </label>
                            </div>
                        </div>
                    </div>

                    <hr style="margin: 32px 0; border: none; border-top: 1px solid rgba(16, 24, 40, 0.1);" />

                    <div class="d-flex gap-3 justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-primary" style="height: 44px; font-weight: 600; min-width: 120px; border-radius: 10px; padding: 10px 20px;">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitButton" style="height: 44px; font-weight: 600; min-width: 140px; border-radius: 10px; padding: 10px 20px; box-shadow: 0 4px 12px rgba(52, 129, 192, 0.25);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 6px;"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            Créer le fournisseur
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('createForm')?.addEventListener('submit', function(e) {
            const button = document.getElementById('submitButton');
            if (button && !button.disabled) {
                LoadingState.show(button);
            }
        });
    </script>
}

