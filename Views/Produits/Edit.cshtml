@model G_StockVente.Controllers.EditProduitViewModel
@{
    ViewData["Title"] = "Modifier le produit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Modifier le produit</h1>
        <p class="page-subtitle">Mise à jour du produit et de ses paramètres boutique</p>
    </div>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"></path></svg>
            Retour
        </a>
    </div>
</div>

<div class="row form-page-container">
    <div class="col-12 col-lg-10">
        <div class="card">
            <div class="card-header">
                <div style="font-weight: 600;">Informations produit global</div>
                <small class="text-muted">Détails communs à toutes les boutiques</small>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" novalidate id="editForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ProduitId" />
                    <input type="hidden" asp-for="BoutiqueId" />

                    <div class="row g-4">
                        <div class="col-12">
                            <label asp-for="Nom" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>
                                Nom du produit <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Nom" 
                                   class="form-control" 
                                   style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                   placeholder="Nom du produit"
                                   autofocus
                                   required />
                            <span asp-validation-for="Nom" class="form-error"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                                Description
                            </label>
                            <textarea asp-for="Description" 
                                      class="form-control" 
                                      rows="3"
                                      style="padding: var(--space-3) var(--space-4); font-size: 14px;"
                                      placeholder="Description du produit (optionnel)"></textarea>
                            <span asp-validation-for="Description" class="form-error"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="CategorieId" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>
                                Catégorie <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CategorieId" 
                                    class="form-select" 
                                    style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                    asp-items="ViewBag.CategorieId"
                                    required>
                                <option value="">-- Sélectionner une catégorie --</option>
                            </select>
                            <span asp-validation-for="CategorieId" class="form-error"></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <div style="font-weight: 600;">Paramètres boutique</div>
                <small class="text-muted">Configuration spécifique à la boutique</small>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Sku" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
                            SKU
                        </label>
                        <input asp-for="Sku" 
                               class="form-control" 
                               style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                               placeholder="SKU-001" />
                        <span asp-validation-for="Sku" class="form-error"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CodeBarres" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M3 7V5a2 2 0 0 1 2-2h2"></path><path d="M17 3h2a2 2 0 0 1 2 2v2"></path><path d="M21 17v2a2 2 0 0 1-2 2h-2"></path><path d="M7 21H5a2 2 0 0 1-2-2v-2"></path><path d="M8 7v10"></path><path d="M12 7v10"></path><path d="M17 7v10"></path></svg>
                            Code-barres
                        </label>
                        <input asp-for="CodeBarres" 
                               class="form-control" 
                               style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                               placeholder="1234567890123" />
                        <span asp-validation-for="CodeBarres" class="form-error"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PrixAchat" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
                            Prix d'achat (€) <span class="text-danger">*</span>
                        </label>
                        <div class="input-group" style="height: 42px;">
                            <input asp-for="PrixAchat" 
                                   class="form-control" 
                                   type="number" 
                                   step="0.01"
                                   min="0"
                                   style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                   placeholder="0.00"
                                   required />
                            <span class="input-group-text" style="background: var(--color-bg);">€</span>
                        </div>
                        <span asp-validation-for="PrixAchat" class="form-error"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PrixVente" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
                            Prix de vente (€) <span class="text-danger">*</span>
                        </label>
                        <div class="input-group" style="height: 42px;">
                            <input asp-for="PrixVente" 
                                   class="form-control" 
                                   type="number" 
                                   step="0.01"
                                   min="0"
                                   style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                                   placeholder="0.00"
                                   required />
                            <span class="input-group-text" style="background: var(--color-bg);">€</span>
                        </div>
                        <span asp-validation-for="PrixVente" class="form-error"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SeuilStockBas" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline></svg>
                            Seuil stock bas
                        </label>
                        <input asp-for="SeuilStockBas" 
                               class="form-control" 
                               type="number" 
                               min="0"
                               style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                               placeholder="0" />
                        <span asp-validation-for="SeuilStockBas" class="form-error"></span>
                        <small class="text-muted" style="font-size: 13px; margin-top: var(--space-1); display: block;">
                            Alerte automatique lorsque le stock atteint ce niveau
                        </small>
                    </div>

                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check" style="padding-top: var(--space-3);">
                            <input asp-for="EstActif" 
                                   class="form-check-input" 
                                   type="checkbox" 
 />
                            <label asp-for="EstActif" class="form-check-label" style="font-weight: 500; cursor: pointer; margin-left: var(--space-2);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                                Produit actif
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <div class="d-flex gap-3 justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-primary" style="height: 42px; font-weight: 600; min-width: 120px;">
                        Annuler
                    </a>
                    <button type="submit" form="editForm" class="btn btn-primary" id="submitButton" style="height: 42px; font-weight: 600; min-width: 120px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: var(--space-2);"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path><polyline points="17 21 17 13 7 13 7 21"></polyline><polyline points="7 3 7 8 15 8"></polyline></svg>
                        Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('editForm')?.addEventListener('submit', function(e) {
            const button = document.getElementById('submitButton');
            if (button && !button.disabled) {
                LoadingState.show(button);
            }
        });
    </script>
}

