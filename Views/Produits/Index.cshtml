@model IEnumerable<G_StockVente.Domain.Models.ProduitBoutique>
@{
    ViewData["Title"] = "Produits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Produits</h1>
        <p class="page-subtitle">Catalogue boutique : prix, codes, seuils et stocks</p>
    </div>
    <div class="page-actions">
        @if (User.IsInRole("AdminReseau") || User.IsInRole("ManagerBoutique") || User.IsInRole("GestionnaireStock"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                Nouveau produit
            </a>
        }
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12 col-md-8 col-lg-7">
                <label class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">Recherche</label>
                <div class="input-group" style="height: 42px;">
                    <span class="input-group-text" style="background: var(--color-bg); border-right: none; color: var(--color-muted); padding: 0 var(--space-3);">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path></svg>
                    </span>
                    <input type="text" 
                           name="searchTerm" 
                           value="@ViewBag.SearchTerm" 
                           class="form-control" 
                           style="border-left: none; padding: var(--space-3) var(--space-4); font-size: 14px;"
                           placeholder="Nom, SKU ou code-barres..." 
                           autocomplete="off"
                           aria-label="Rechercher un produit" />
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-3">
                <button type="submit" class="btn btn-primary w-100" style="height: 42px; font-weight: 600;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: var(--space-2);"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path></svg>
                    Rechercher
                </button>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
            {
                <div class="col-12 col-md-6 col-lg-2">
                    <a href="@Url.Action("Index")" class="btn btn-outline-primary w-100" style="height: 42px; font-weight: 600;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: var(--space-2);"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                        Réinitialiser
                    </a>
                </div>
            }
        </form>
    </div>
</div>

<!-- Product List -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <div style="font-weight: 600;">Catalogue</div>
            @if (Model.Any())
            {
                <small class="text-muted">@Model.Count() produit(s)</small>
            }
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <div class="badge badge-primary">
                Résultats pour : <strong>@ViewBag.SearchTerm</strong>
            </div>
        }
    </div>
    <div class="card-body" style="padding: 0;">
        @if (!Model.Any())
        {
            <div class="empty-state" style="margin: var(--space-8);">
                <div class="empty-state-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>
                </div>
                <div class="empty-state-title">Aucun produit trouvé</div>
                <div class="empty-state-message">
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <span>Aucun résultat pour <strong>"@ViewBag.SearchTerm"</strong>.</span>
                    }
                    else
                    {
                        <span>Commencez par ajouter votre premier produit au catalogue.</span>
                    }
                </div>
                @if (User.IsInRole("AdminReseau") || User.IsInRole("ManagerBoutique") || User.IsInRole("GestionnaireStock"))
                {
                    <div class="empty-state-action">
                        <a asp-action="Create" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                            Créer le premier produit
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Catégorie</th>
                            <th>SKU</th>
                            <th>Code-barres</th>
                            <th class="text-end">Prix achat</th>
                            <th class="text-end">Prix vente</th>
                            <th class="text-end">Stock</th>
                            <th style="width: 100px;">Statut</th>
                            <th style="width: 120px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var stockTotal = item.Stocks?.Sum(s => s.Quantite) ?? 0;
                            var stockBas = item.SeuilStockBas > 0 && stockTotal <= item.SeuilStockBas;
                            <tr>
                                <td>
                                    <div style="font-weight: 600; font-size: 14px;">@item.Produit.Nom</div>
                                    @if (!string.IsNullOrEmpty(item.Produit.Description))
                                    {
                                        <small class="text-muted">@item.Produit.Description.Substring(0, Math.Min(50, item.Produit.Description.Length))@(item.Produit.Description.Length > 50 ? "..." : "")</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-secondary">@item.Produit.Categorie.Nom</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Sku))
                                    {
                                        <code style="font-size: 12px;">@item.Sku</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.CodeBarres))
                                    {
                                        <code style="font-size: 12px;">@item.CodeBarres</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td class="text-end text-muted">@item.PrixAchat.ToString("N2", new System.Globalization.CultureInfo("fr-FR")) €</td>
                                <td class="text-end"><strong style="font-size: 15px;">@item.PrixVente.ToString("N2", new System.Globalization.CultureInfo("fr-FR")) €</strong></td>
                                <td class="text-end">
                                    @if (stockBas)
                                    {
                                        <div class="d-flex align-items-center justify-content-end gap-2">
                                            <span class="badge badge-warning">⚠️ Stock bas</span>
                                            <strong class="text-danger">@stockTotal</strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <span style="font-weight: 600;">@stockTotal</span>
                                    }
                                </td>
                                <td>
                                    @if (item.EstActif)
                                    {
                                        <span class="badge badge-success">
                                            <span class="status-indicator status-indicator--success"></span>
                                            Actif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">
                                            <span class="status-indicator status-indicator--muted"></span>
                                            Inactif
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" title="Actions">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="1"></circle><circle cx="12" cy="5" r="1"></circle><circle cx="12" cy="19" r="1"></circle></svg>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id" title="Détails">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                                            </a></li>
                                            @if (User.IsInRole("AdminReseau") || User.IsInRole("ManagerBoutique") || User.IsInRole("GestionnaireStock"))
                                            {
                                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id" title="Modifier">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                                </a></li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

