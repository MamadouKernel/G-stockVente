@{
    ViewData["Title"] = "Rapports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Rapports</h1>
        <p class="page-subtitle">Analysez vos performances et générez des exports</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-md-6 col-xl-4">
        <div class="card h-100" style="transition: all var(--transition-base);">
            <div class="card-body" style="padding: var(--space-6);">
                <div style="width: 48px; height: 48px; border-radius: var(--radius-lg); background: var(--color-success-light); display: flex; align-items: center; justify-content: center; margin-bottom: var(--space-4);">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-success)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>
                </div>
                <h3 style="font-size: 18px; font-weight: 700; margin: 0 0 var(--space-2);">Rapport des ventes</h3>
                <p class="text-muted" style="font-size: 14px; margin: 0 0 var(--space-4); line-height: 1.6;">
                    Analysez vos ventes par période, boutique et produits. Export CSV disponible.
                </p>
                <a asp-action="Ventes" class="btn btn-primary w-100">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>
                    Ouvrir le rapport
                </a>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <div class="card h-100" style="transition: all var(--transition-base);">
            <div class="card-body" style="padding: var(--space-6);">
                <div style="width: 48px; height: 48px; border-radius: var(--radius-lg); background: var(--color-info-light); display: flex; align-items: center; justify-content: center; margin-bottom: var(--space-4);">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-info)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
                </div>
                <h3 style="font-size: 18px; font-weight: 700; margin: 0 0 var(--space-2);">Rapport des stocks</h3>
                <p class="text-muted" style="font-size: 14px; margin: 0 0 var(--space-4); line-height: 1.6;">
                    État des stocks par boutique et dépôt. Alertes stock bas incluses.
                </p>
                <a asp-action="Stocks" class="btn btn-primary w-100">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>
                    Ouvrir le rapport
                </a>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6 col-xl-4">
        <div class="card h-100" style="transition: all var(--transition-base);">
            <div class="card-body" style="padding: var(--space-6);">
                <div style="width: 48px; height: 48px; border-radius: var(--radius-lg); background: var(--color-warning-light); display: flex; align-items: center; justify-content: center; margin-bottom: var(--space-4);">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-warning-hover)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><line x1="20" y1="8" x2="20" y2="14"></line><line x1="23" y1="11" x2="17" y2="11"></line></svg>
                </div>
                <h3 style="font-size: 18px; font-weight: 700; margin: 0 0 var(--space-2);">Rapport des achats</h3>
                <p class="text-muted" style="font-size: 14px; margin: 0 0 var(--space-4); line-height: 1.6;">
                    Commandes par période, fournisseur et statut de réception.
                </p>
                <a asp-action="Achats" class="btn btn-primary w-100">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>
                    Ouvrir le rapport
                </a>
            </div>
        </div>
    </div>
</div>

