@model G_StockVente.Domain.Models.RapportProgramme
@{
    ViewData["Title"] = "Modifier le rapport programmé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Modifier le rapport programmé</h1>
        <p class="page-subtitle">Configuration du rapport automatique</p>
    </div>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
            Retour
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UtilisateurCreateurId" />
            <input type="hidden" asp-for="DateCreation" />
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="TypeRapport" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                        Type de rapport <span class="text-danger">*</span>
                    </label>
                    <select asp-for="TypeRapport" 
                            asp-items="@(ViewBag.TypesRapport as SelectList)"
                            class="form-select" 
                            style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                            required>
                    </select>
                    <span asp-validation-for="TypeRapport" class="form-error"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Frequence" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
                        Fréquence <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Frequence" 
                            asp-items="@(ViewBag.Frequences as SelectList)"
                            class="form-select" 
                            style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                            required>
                    </select>
                    <span asp-validation-for="Frequence" class="form-error"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="BoutiqueId" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                        Boutique
                    </label>
                    <select asp-for="BoutiqueId" 
                            asp-items="@(ViewBag.Boutiques as SelectList)"
                            class="form-select" 
                            style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;">
                        <option value="">-- Toutes les boutiques (Consolidé) --</option>
                    </select>
                    <small class="text-muted">Laissez vide pour un rapport consolidé réseau</small>
                    <span asp-validation-for="BoutiqueId" class="form-error"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EmailDestinataire" class="form-label" style="font-weight: 600; margin-bottom: var(--space-2);">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="vertical-align: -2px; margin-right: 4px;"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                        Email destinataire <span class="text-danger">*</span>
                    </label>
                    <input asp-for="EmailDestinataire" 
                           type="email"
                           class="form-control" 
                           style="height: 42px; padding: var(--space-3) var(--space-4); font-size: 14px;"
                           placeholder="email@exemple.com"
                           required />
                    <span asp-validation-for="EmailDestinataire" class="form-error"></span>
                </div>

                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="EstActif" 
                               class="form-check-input" 
                               type="checkbox"
 />
                        <label asp-for="EstActif" class="form-check-label" style="font-weight: 600; margin-left: var(--space-2); cursor: pointer;">
                            Rapport actif
                        </label>
                    </div>
                    <small class="text-muted">Un rapport actif sera exécuté automatiquement selon la fréquence définie</small>
                </div>

                <div class="col-12">
                    <hr class="my-4" />
                    <div class="d-flex justify-content-end gap-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            Enregistrer les modifications
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

