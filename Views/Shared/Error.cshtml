@using G_StockVente.Domain.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="surface padded">
    <div class="page-header mb-2">
        <div>
            <h2 class="page-title" style="font-size:22px;">Une erreur est survenue</h2>
            <p class="page-subtitle">Impossible de traiter votre requête pour le moment.</p>
        </div>
        <div class="page-actions">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Retour à l’accueil</a>
        </div>
    </div>

@if (Model.ShowRequestId)
{
    <p>
        <strong>ID requête :</strong> <code>@Model.RequestId</code>
    </p>
}

    <div class="alert alert-warning mb-0">
        Si le problème persiste, contactez l’administrateur et communiquez l’ID de requête ci-dessus.
    </div>
</div>
