@*
    Toast Notification Component
    Usage: Will be automatically rendered by app.js
    Manual usage: @await Html.PartialAsync("_Toast", new { Message = "Success!", Type = "success" })
*@

@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            Toast.success('@Html.Raw(TempData["SuccessMessage"])');
        });
    </script>
}

