        background-color: rgba(52, 129, 192, 0.08);
    }
</style>
<script>
    // S'assurer que les liens du dropdown fonctionnent correctement
    document.addEventListener('DOMContentLoaded', function() {
        const dropdownItems = document.querySelectorAll('.dropdown-item[asp-action]');
        
        dropdownItems.forEach(function(item) {
            item.addEventListener('click', function(e) {
                // S'assurer que le lien est bien cliqué
                const href = this.getAttribute('href');
                if (href && href !== '#' && href !== 'javascript:void(0)') {
                    // Laisser Bootstrap gérer la navigation normalement
                    window.location.href = href;
